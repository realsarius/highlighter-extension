{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "version": "1.4.0",
    "description": "__MSG_extensionDescription__",
    "author": "Berkan Sozer",
    "default_locale": "en",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "contextMenus"
    ],
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_popup": "popup/popup.html",
        "default_title": "Highlighter"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "highlight-selection": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Seçili metni son kullanılan renkle vurgula"
        }
    }
}